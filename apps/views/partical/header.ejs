<script>

    loadData();
    async function loadData(){
        await loadUserLogin();
    };
    

    async function loadUserLogin(){
        var data;
        await fetch("/authenticate/get-user-login").then( async function(response){
          if(response.ok)
            data = await response.json();
          else {
            data="";
            resetViewAcount();
          };
        });

        var acount = document.getElementById("acount");
        if(data!=""){
          acount.innerHTML = ``;
          acount.innerHTML =  `<a>Hello ${data}<a id="logout" href="#"> Logout</a></a>`;          
          handleLinkLogout();
        }
    };

    function handleLinkLogout(){
        let logout = document.getElementById("logout");
        logout.onclick = async function(){
            await fetch("/authenticate/logout").then((response)=>{
              if(response.ok)
                  resetViewAcount();
            });

        };
    };

    function resetViewAcount(){
        var acount = document.getElementById("acount");
        acount.innerHTML = ``;
        acount.innerHTML = `<a href="/login" class="bk-btn">Loging Now</a>`
    };






